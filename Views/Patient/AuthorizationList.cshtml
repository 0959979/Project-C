@model zorgapp.ViewModels.CareViewModel
@{
    ViewData["Title"] = "Test";
}
<br />
<class ="container">
    <button onclick="window.location = '../Patient/GenerateAuthorizeCode';">Generate new authorization code</button>
</class>
<class ="container">
    <button onclick="window.location = '../Patient/AuthorizationForm';">Enter authorization code</button>
</class>

<br />
<h2>My authorized contacts list</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                #
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Phone nr
            </th>
            <th>
                Email
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Carers)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <form method="post">
                    <input type="hidden" value="@item.PatientId" id="id" name="id" />
                    <input type="submit" value="Cancel authorization" id="submit" asp-controller="Patient" asp-action="AuthorizationRevoke">
                </form>
            </td>
        </tr>
        }
    </tbody>
</table>
<br />

